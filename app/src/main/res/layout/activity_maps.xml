<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto" tools:context=".MapsActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="1080px" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_height="wrap_content" android:layout_width="match_parent"
        android:id="@+id/bottom_navigation"
        app:menu="@menu/menu_bottom_navigation"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/btnShareLtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="125dp"
        android:text="Text Police My Location" />

    <Button
        android:id="@+id/btnInviteNW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="118dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="59dp"
        android:text="Invite" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/etuserNW"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_below="@+id/btnShareLtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="61dp"
        android:ems="10"
        android:hint="Invite a Nightwalker by Username?"
        android:inputType="textPersonName" />

</RelativeLayout>