<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto" tools:context=".MapsActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/forlocation">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="358dp"
        android:layout_height="365dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="20dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#5323B1"
        app:menu="@menu/menu_bottom_navigation" />

    <Button
        android:id="@+id/btnShareLtn"
        android:layout_width="213dp"
        android:layout_height="38dp"
        android:layout_below="@+id/map"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="95dp"
        android:background="#25126E"
        android:text="Text Police My Location"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnInviteNW"
        android:layout_width="166dp"
        android:layout_height="25dp"
        android:layout_above="@+id/bottom_navigation"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="128dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="42dp"
        android:background="#25126E"
        android:text="Invite"
        android:textColor="#FFFFFF" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/etuserNW"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_below="@+id/btnShareLtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="63dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Invite a Nightwalker by Username?"
        android:inputType="textPersonName"
        android:textColor="#00000F" />

</RelativeLayout>