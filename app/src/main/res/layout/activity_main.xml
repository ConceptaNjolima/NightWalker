<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/image_call"
        android:layout_width="333dp"
        android:layout_height="333dp"
        android:layout_above="@+id/bottom_navigation"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="217dp"
        android:layout_marginBottom="99dp"
        app:srcCompat="@drawable/ic_local_phone_black_24dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_bottom_navigation" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="298dp"
        android:layout_height="72dp"
        android:layout_alignEnd="@+id/image_call"
        android:layout_alignBottom="@+id/image_call"
        android:layout_marginEnd="-47dp"
        android:layout_marginBottom="324dp"
        android:text="Call 911"
        android:textColor="#25126E"
        android:textSize="50dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bottom_navigation"
        android:layout_alignEnd="@+id/image_call"
        android:layout_marginTop="-677dp"
        android:layout_marginEnd="-40dp"
        android:background="#25126E"
        android:text="logout"
        android:textColor="#FFFFFF"
        android:textSize="24dp" />

</RelativeLayout>